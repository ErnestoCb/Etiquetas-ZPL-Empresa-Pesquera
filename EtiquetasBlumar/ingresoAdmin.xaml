<Window x:Class="EtiquetasBlumar.ingresoAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtiquetasBlumar"
        xmlns:adorners="http://gu.se/Adorners"
        mc:Ignorable="d"
        Title="Administrador" Height="300" Width="400">
    <Grid>
        <Image Source="img/administrador.png" HorizontalAlignment="Left" Height="80" Margin="275,49,0,0" VerticalAlignment="Top" Width="80"/>
        <Label FontSize="20" Content="Ingresar Administrador" HorizontalAlignment="Left" Margin="33,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUser" adorners:Watermark.Text="Usuario..." HorizontalAlignment="Left" Height="23" Margin="33,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="237"/>
        <PasswordBox x:Name="txtPwd" adorners:Watermark.Text="Contraseña..." HorizontalAlignment="Left" Margin="33,149,0,0" Height="23" VerticalAlignment="Top" Width="322"/>
        <Button Content="Ingresar" HorizontalAlignment="Left" Margin="233,196,0,0" VerticalAlignment="Top" Width="122" Height="32" Click="Button_Click"/>


    </Grid>
</Window>
